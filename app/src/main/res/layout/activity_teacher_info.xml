<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crdiggs.myapplication.TeacherInfo">


    <EditText
        android:id="@+id/teacher_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Teacher Name"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/school_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="School Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/teacher_name_input"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/grade_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Grade Number"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/school_name_input"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/number_students_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Number of Students"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/grade_input"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/student_names_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_students_input" />

</android.support.constraint.ConstraintLayout>
